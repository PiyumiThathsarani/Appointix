@model Appointix.Models.Schedule

<div class="modal fade" id="createScheduleModal" tabindex="-1" aria-labelledby="createScheduleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-4 shadow">
            <div class="modal-header bg-primary text-white rounded-top-4">
                <h5 class="modal-title" id="createScheduleModalLabel">Create New Schedule</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="createScheduleForm" asp-action="Create" method="post">
                    @Html.AntiForgeryToken()

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3">
                        <label asp-for="Date" class="form-label">Date</label>
                        <input asp-for="Date" class="form-control" type="date" />
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ScheduleStartTime" class="form-label">Start Time</label>
                        <input asp-for="ScheduleStartTime" class="form-control" type="time" />
                        <span asp-validation-for="ScheduleStartTime" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ScheduleEndTime" class="form-label">End Time</label>
                        <input asp-for="ScheduleEndTime" class="form-control" type="time" />
                        <span asp-validation-for="ScheduleEndTime" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Note" class="form-label">Description (optional)</label>
                        <textarea asp-for="Note" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Note" class="text-danger"></span>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-success rounded-pill">Create Schedule</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
