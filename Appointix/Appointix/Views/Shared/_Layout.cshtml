@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
    var isHomePage = currentController == "Home" && currentAction == "Index";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Appointix</title>

    <!-- Favicon -->
    <link rel="icon" href="~/assets/images/logos/favicon.png" type="image/png" />

    <!-- Theme CSS -->
    <link rel="stylesheet" href="~/assets/css/style.css" asp-append-version="true" />

    <!-- App-specific styles -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Appointix.styles.css" asp-append-version="true" />

    <!-- Font Awesome (for icons) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" crossorigin="anonymous" />

    @await RenderSectionAsync("Styles", required: false)

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <!-- Bootstrap 5 CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom Global Styling -->
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background: #f0f2f5;
            min-height: 100vh;
        }

        .form-container {
            background: white;
            border-radius: 15px;
            padding: 2rem;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }

        .form-title {
            font-weight: 600;
            margin-bottom: 1rem;
        }

        .navbar-brand {
            font-weight: 600;
            font-size: 1.25rem;
        }

        .nav-link {
            font-size: 1rem;
            margin-left: 1rem;
        }
    </style>

</head>
<body class="hold-transition layout-fixed @(isHomePage ? "no-sidebar" : "sidebar-mini")">
    <div class="wrapper">
        <!-- Navbar -->
        @await Html.PartialAsync("_Navbar")
        <main role="main" class="pb-3">
            @RenderBody()
        </main>

        <main role="main" class="content-wrapper p-3">
            @RenderBody()
        </main>

        <footer class="border-top footer text-muted text-center p-2">
            &copy; 2025 - Appointix - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </footer>
    </div>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" crossorigin="anonymous"></script>

    <!-- Bootstrap Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>

    <!-- App Scripts -->
    <script src="~/assets/js/app.min.js"></script>
    <script src="~/assets/js/sidebarmenu.js"></script>

    <!-- Calendar -->
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/index.global.min.js" crossorigin="anonymous"></script>

    <!-- Site JS -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
