@{
    ViewData["Title"] = "Home";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="display-5 fw-bold">Welcome to Appointix</h1>
        <p class="text-muted">Manage your appointments and schedules efficiently.</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-3">
            <a class="btn btn-outline-primary w-100 mb-3" href="~/Identity/Account/Login">Login</a>
        </div>
        <div class="col-md-3">
            <a class="btn btn-outline-success w-100 mb-3" asp-controller="Schedule" asp-action="Index">Schedules</a>
        </div>
        <div class="col-md-3">
            <a class="btn btn-outline-info w-100 mb-3" asp-controller="Appointment" asp-action="Index">Appointments</a>
        </div>
    </div>
</div>
