@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 95vh;">
    <div class="card p-4 shadow-lg animate__animated animate__fadeIn" style="max-width: 480px; width: 100%; border-radius: 20px;">
        <div class="text-center mb-4">
            <img src="~/assets/images/logos/favicon.png" alt="Appointix Logo" width="70" />
            <h3 class="mt-3 fw-bold">Create Your Account</h3>
            <p class="text-muted">Welcome to <span class="text-primary">Appointix</span></p>
        </div>

        <form asp-route-returnUrl="@Model.ReturnUrl" method="post" novalidate>
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <!-- Full Name -->
            <div class="form-group mb-3">
                <label asp-for="Input.FullName" class="form-label">Full Name</label>
                <input asp-for="Input.FullName" class="form-control rounded-pill shadow-sm" placeholder="Enter your full name" />
                <span asp-validation-for="Input.FullName" class="text-danger"></span>
            </div>

            <!-- Email -->
            <div class="form-group mb-3">
                <label asp-for="Input.Email" class="form-label">Email address</label>
                <input asp-for="Input.Email" class="form-control rounded-pill shadow-sm" placeholder="Enter your email" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <!-- Password -->
            <div class="form-group mb-3">
                <label asp-for="Input.Password" class="form-label">Password</label>
                <input asp-for="Input.Password" type="password" class="form-control rounded-pill shadow-sm" placeholder="Create a password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <!-- Confirm Password -->
            <div class="form-group mb-4">
                <label asp-for="Input.ConfirmPassword" class="form-label">Confirm Password</label>
                <input asp-for="Input.ConfirmPassword" type="password" class="form-control rounded-pill shadow-sm" placeholder="Confirm your password" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100 rounded-pill shadow-sm fs-5">
                Register
            </button>
        </form>

        <div class="text-center mt-4">
            <small>Already have an account? 
                <a asp-page="./Login" class="text-decoration-none fw-semibold text-primary">Sign In</a>
            </small>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
